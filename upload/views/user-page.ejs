<%- include('header') %>
    <div class="user-page-main">
        <div class="user-page-profile">
            <div class="user-page-profile-img">
                <img src="/<%= profile %>" alt="프로필사진">
            </div>
            <div class="user-id">
                <%= userId %>
            </div>
        </div>
        <div class="user-page-content">
            <div class="user-post-count user-page-content-div">
                <div class="user-page-content-title">게시글</div>
                <div class="count-no" id="post-count"><%= post.length %></div>
            </div>
            <div class="user-comment-count user-page-content-div">
                <div class="user-page-content-title">댓글</div>
                <div class="count-no" id="comment-count"><%= comment.length %></div>
            </div>
            <div class="user-like-count user-page-content-div">
                <div class="user-page-content-title">좋아하는<br>게시글</div>
                <div class="count-no" id="like-count"><%= like.length %></div>
            </div>
            <div class="user-empathy-count user-page-content-div">
                <div class="user-page-content-title">공감한 댓글</div>
                <div class="count-no" id="empathy-count"><%= empathy.length %></div>
            </div>
            <div class="user-store-count user-page-content-div">
                <div class="user-page-content-title">저장한 글</div>
                <div class="count-no" id="store-count"><%= store.length %></div>
            </div>
        </div>
    </div>
    



    <div class="list-modal post-count" style="bottom: -100%; z-index: 1000;">
        <div class="list-modal-div post-no">
            <div class="list-modal-header">
                <div class="list-modal-title">작성한 게시글</div>
                <div class="list-modal-exit" id="post-count" onclick="exit(this)">x</div>
            </div>
            <div class="list-modal-body">
                <ul class="list-ul">
                    <% for(let i=0; i<post.length; i++){ %>
                        <div class="li">
                            <li title="<%= post[i].description %>" post-no="<%= post[i].no %>" onclick="toPost(<%= post[i].no %>)"><%= post[i].description %></li>
                            <% if(userId == loginId){ %> <div class="delete-div"><div class="delete" onclick="delPost(this, <%= post[i].no %>, `<%= loginId %>`)">삭제</div></div> <% } %>
                        </div>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>



    <div class="list-modal comment-count" style="bottom: -100%; z-index: 1001;">
        <div class="list-modal-div comment-no">
            <div class="list-modal-header">
                <div class="list-modal-title">작성한 댓글</div>
                <div class="list-modal-exit" id="comment-count" onclick="exit(this)">x</div>
            </div>
            <div class="list-modal-body">
                <ul class="list-ul">
                    <% for(let i=0; i<comment.length; i++){ %>
                        <div class="li">
                            <li title="<%= comment[i].text %>" comment-no="<%= comment[i].comment_no %>" onclick="toPost(<%= comment[i].post_no %>)"><%= comment[i].text %></li>
                            <% if(userId == loginId){ %><div class="delete-div"><div class="delete" onclick="delComment(this, <%= comment[i].post_no %>, <%= comment[i].comment_no %>)">삭제</div></div><% } %>
                        </div>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>



    <div class="list-modal like-count" style="bottom: -100%; z-index: 1002;">
        <div class="list-modal-div like-count">
            <div class="list-modal-header">
                <div class="list-modal-title">좋아하는 게시글</div>
                <div class="list-modal-exit" id="like-count" onclick="exit(this)">x</div>
            </div>
            <div class="list-modal-body">
                <ul class="list-ul">
                    <% for(let i=0; i<like.length; i++){ %>
                        <div class="li">
                            <li title="<%= like[i].description %>" post-no="<%= like[i].post_no %>" onclick="toPost(<%= like[i].post_no %>)"><%= like[i].description %></li>
                            <% if(userId == loginId){ %><div class="delete-div"><div class="delete" onclick="delLike(this, <%= like[i].post_no %>)">삭제</div></div><% } %>
                        </div>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>


    
    <div class="list-modal empathy-count" style="bottom: -100%; z-index: 1003;">
        <div class="list-modal-div empathy-count">
            <div class="list-modal-header">
                <div class="list-modal-title">공감한 댓글</div>
                <div class="list-modal-exit" id="empathy-count" onclick="exit(this)">x</div>
            </div>
            <div class="list-modal-body">
                <ul class="list-ul">
                    <% for(let i=0; i<empathy.length; i++){ %>
                        <div class="li">
                            <li title="<%= empathy[i].text %>" comment-no="<%= empathy[i].comment_no %>" onclick="toPost(<%= empathy[i].post_no %>)"><%= empathy[i].text %></li>
                            <% if(userId == loginId){ %><div class="delete-div"><div class="delete" onclick="delEmpathy(this, <%= empathy[i].comment_no %>)">삭제</div></div><% } %>
                        </div>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>


    <div class="list-modal store-count" style="bottom: -100%; z-index: 1003;">
        <div class="list-modal-div store-count">
            <div class="list-modal-header">
                <div class="list-modal-title">저장한 글</div>
                <div class="list-modal-exit" id="store-count" onclick="exit(this)">x</div>
            </div>
            <div class="list-modal-body">
                <ul class="list-ul">
                    <% for(let i=0; i<store.length; i++){ %>
                        <div class="li">
                            <li title="<%= store[i].description %>" post-no="<%= store[i].post_no %>" onclick="toPost(<%= store[i].post_no %>)"><%= store[i].description %></li>
                            <% if(userId == loginId){ %><div class="delete-div"><div class="delete" onclick="delStore(this, <%= store[i].post_no %>)">삭제</div></div><% } %>
                        </div>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>


<script src="/user-page.js"></script>


<%- include('footer') %>